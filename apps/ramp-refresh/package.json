{
  "description": "Stand alone Node application that refreshes the Ramp database",
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "license": "Apache-2.0",
  "name": "@repo/ramp-refresh",
  "private": true,
  "scripts": {
    "dotenv": "dotenvx",
    "build": "dotenvx run --quiet -- tsc",
