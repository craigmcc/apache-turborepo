{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "^ramp-db:generate"
      ],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "RAMP_PROD_API_BASE_URL",
        "RAMP_PROD_API_CLIENT_ID",
        "RAMP_PROD_API_CLIENT_SECRET",
        "RAMP_PROD_API_SCOPE"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "!.turbo/**"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^ramp-db:generate"
      ],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "RAMP_PROD_API_BASE_URL",
        "RAMP_PROD_API_CLIENT_ID",
        "RAMP_PROD_API_CLIENT_SECRET",
        "RAMP_PROD_API_SCOPE"
      ],
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "RAMP_PROD_API_BASE_URL",
        "RAMP_PROD_API_CLIENT_ID",
        "RAMP_PROD_API_CLIENT_SECRET",
        "RAMP_PROD_API_SCOPE"
      ]
    },
    "ramp-db:deploy": {
      "cache": false
    },
    "ramp-db:generate": {
      "cache": true
    },
    "ramp-db:migrate": {
      "cache": true
    },
    "start": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "RAMP_PROD_API_BASE_URL",
        "RAMP_PROD_API_CLIENT_ID",
        "RAMP_PROD_API_CLIENT_SECRET",
        "RAMP_PROD_API_SCOPE"
      ]
    },
    "test": {
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
