{
  "extends": "@repo/typescript-config/react-library",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "types": ["vitest"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/tests/**"
  ],
  "include": ["src"],
}
